<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#F4F5FE"
   >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity = "center">


         <ImageView
             android:id = "@+id/mainlogo"
             android:src = "@drawable/multi_coloured_logo"
             android:adjustViewBounds="true"
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:layout_margin="5dp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity = "center">

            <ImageButton
                android:src="@drawable/aboutcopy"
                android:id = "@+id/about"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:paddingBottom="20dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/apptheme_btn_default_holo_light"/>

            <ImageButton
             android:src = "@drawable/signup"
             android:scaleType="fitCenter"
             android:gravity="center|bottom"
             android:layout_margin="5dp"
             android:paddingBottom="20dp"
             android:id = "@+id/signUp"
             android:layout_width="115dp"
             android:layout_height="115dp"
             android:textColor="#FFFFFF"
             android:background="@drawable/apptheme_btn_default_holo_light"
             android:onClick="sendEmail"/>


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity = "center">
            <ImageButton
                android:id = "@+id/contact"
                android:src = "@drawable/contact"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/apptheme_btn_default_holo_light"/>
            <ImageButton
                android:id = "@+id/surveys"
                android:src="@drawable/surveys"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:text = "Surveys"
                android:background="@drawable/apptheme_btn_default_holo_light"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
