<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="vishalkuo.com.futuresrevealed.SplashScreen">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@android:color/transparent">
        <ImageView
            android:id = "@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bg"
            android:scaleType="center"/>
        <TextView
            android:id = "@+id/openingF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "F"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id = "@+id/pt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "utures"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id = "@+id/pt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Revealed"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/surveys"
            android:elevation="5dp"
            android:text="Surveys"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:background="@drawable/btnselect"
            android:layout_marginTop="25dp"
            android:layout_below="@id/openingF"
            />
        <Button
            android:id="@+id/eList"
            android:elevation="5dp"
            android:layout_margin="18dp"
            android:text="Email List"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:background="@drawable/btnselect"
            android:layout_below="@id/surveys"
            />
        <Button
            android:id="@+id/learnMore"
            android:elevation="5dp"
            android:text="Learn More"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:background="@drawable/btnselect"
            android:layout_below="@id/eList"
            />


    </RelativeLayout>




</LinearLayout>
