<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vishalkuo.com.futuresrevealed" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/fvnowreath"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".aboutActivity"
            android:label="About"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".contactActivity"
            android:label="Contact"
            android:theme= "@style/TranslucentActionBar.ActionBar.Overlay">
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="Futures Revealed" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerView"
            android:label="@string/title_activity_s_view" >
        </activity>
        <activity
            android:name=".learn_moreList"
            android:label="About"
            android:theme="@style/TranslucentActionBar.ActionBar.Overlay">
        </activity>
    </application>

</manifest>
